<div class="letters-container d-flex justify-space-between text-center my-5">
  <% @letters.each do |letter| %>
    <div class="display-4 bg-info text-white w-100 col-1 rounded-circle mx-auto p-4">
      <%= letter %>
    </div>
  <% end %>
</div>

<div class="row m-5 justify-content-around px-5 score-container">
  <div class="col-md-5 col-sm-12 mx-auto my-5">
    <h3>Your answer:</h3>
    <h2 class="text-info"><%= @answer.join('').upcase %></h2>
  </div>

  <div class="col-md-5 col-sm-12 mx-auto my-5">
    <h3>Your score:</h3>
    <h2 class="text-warning"><%= @score %></h2>
  </div>
</div>

<%= link_to "NEW GAME", new_path, class: "btn btn-warning"  %>

