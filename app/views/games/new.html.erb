<h1>New game</h1>

<ul>
  <% @letters.each do |letter| %>
    <li class="letter">
       <%= letter %>
    </li>
  <% end %>
</ul>

<p>What is the longest word you can find?</p>

<form class="form-inline" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="letters" value=<%= @letters.join %>>
  <input type="text" name="word" placeholder="Longest word">
  <input class="btn" type="submit" value="Play">
</form>
